<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.laetitiacarquet.mkurowncard.MainActivity">


        <!-- beginning header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@color/background">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lataberna"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/taberna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="@dimen/padding_default"
                android:textAllCaps="true"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                android:text="@string/app_name"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="@dimen/padding_default"
                android:textStyle="italic"
                android:fontFamily="cursive"
                android:textSize="@dimen/subtitle_size"
                android:text="@string/el_cortijo"
                android:textColor="@color/gold"/>
        </RelativeLayout> <!--end of header-->
        <!-- beginning icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/sangria_background"
                android:layout_weight="0.1"
                android:padding="@dimen/padding_default">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/sangria"/>
                <TextView
                    android:id="@+id/drinks"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/font_size"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/icon_box_text_color"
                    android:textStyle="bold"
                    android:text="@string/sangria"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/tapas_background"
                android:layout_weight="0.1"
                android:padding="@dimen/padding_default">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/tapas"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/font_size"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/icon_box_text_color"
                    android:textStyle="bold"
                    android:text="@string/tapas"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/show_background"
                android:layout_weight="0.1"
                android:padding="@dimen/padding_default">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/show"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/font_size"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/icon_box_text_color"
                    android:textStyle="bold"
                    android:text="@string/show"/>
            </LinearLayout>
        </LinearLayout> <!-- end icons -->
        <!--beginning information-->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:padding="@dimen/padding_general_info"
            android:background="@color/background">
            <!--telephone-->
            <ImageView
                android:id="@+id/icon_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_info"
                android:src="@drawable/ic_action_call"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_info"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/icon_call"
                android:text="@string/telephone"/>
            <!--contact-->
            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_info"
                android:layout_below="@id/icon_call"
                android:src="@drawable/ic_action_email"/>
            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_info"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:layout_alignTop="@+id/icon_email"
                android:layout_toEndOf="@+id/icon_email"
                android:layout_toRightOf="@+id/icon_email"
                android:text="@string/contact" />
            <!--location-->
            <ImageView
                android:id="@+id/icon_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_info"
                android:layout_below="@id/icon_email"
                android:src="@drawable/ic_action_location_on"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size"
                android:padding="@dimen/padding_info"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/icon_location"
                android:layout_toEndOf="@+id/icon_location"
                android:layout_toRightOf="@+id/icon_location"
                android:text="@string/address" />
        </RelativeLayout> <!-- end information -->
    </ScrollView>


</LinearLayout>

